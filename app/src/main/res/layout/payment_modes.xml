<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_payment_method"
        android:fontFamily="@font/nunitobold"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mpesa"
        >
        <ImageView
            android:id="@+id/imgPay"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:src="@drawable/mpesa"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mpesa"
            android:layout_toRightOf="@id/imgPay"
            android:layout_centerVertical="true"
            android:textColor="@color/orange"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/nunitobold"
            />
        <RadioButton
            android:id="@+id/radioMpesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:shadowColor="@color/orange"
            android:textColor="@color/orange"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:buttonTint="@color/orange"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/paypal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/imgPay2"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:src="@drawable/paypal"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paypal"
            android:layout_toRightOf="@id/imgPay2"
            android:layout_centerVertical="true"
            android:textColor="@color/orange"
            android:fontFamily="@font/nunitobold"
            android:layout_marginLeft="15dp"
            />
        <RadioButton
            android:id="@+id/radioPaypal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:shadowColor="@color/orange"
            android:textColor="@color/orange"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:buttonTint="@color/orange"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/payDel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        >
        <ImageView
            android:id="@+id/imgPay3"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:src="@drawable/crt"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_on_delivery"
            android:layout_toRightOf="@id/imgPay3"
            android:layout_centerVertical="true"
            android:textColor="@color/orange"
            android:fontFamily="@font/nunitobold"
            android:layout_marginLeft="15dp"
            />
        <RadioButton
            android:id="@+id/radioPayDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:shadowColor="@color/orange"
            android:textColor="@color/orange"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:buttonTint="@color/orange"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</LinearLayout>